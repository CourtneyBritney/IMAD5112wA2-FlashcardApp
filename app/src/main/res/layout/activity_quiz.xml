<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtScore"
        android:text="@string/score_default"
        android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtQuestion"
        android:text="Question"
        android:textSize="20sp" android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal" android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTrue"
            android:text="@string/true_word"
            android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnFalse"
            android:text="@string/false_word"
            android:layout_marginStart="12dp"
            android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtFeedback"
        android:text="" android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnNext"
        android:text="@string/next"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>
